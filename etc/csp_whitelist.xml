<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="host-base" type="host"></value>
                <value id="visidea-cdn" type="host">cdn.visidea.ai</value>
                <value id="visidea-api" type="host">api.visidea.ai</value>
                <value id="jsdelivr" type="host">cdn.jsdelivr.net</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="host-base" type="host"></value>
                <value id="visidea-cdn" type="host">cdn.visidea.ai</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="host-base" type="host"></value>
                <value id="visidea-api" type="host">api.visidea.ai</value>
                <value id="visidea-cdn" type="host">cdn.visidea.ai</value>
                <value id="visidea-blob" type="host">blob:</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
              <value id="visidea-cdn" type="host">cdn.visidea.ai</value>
              <value id="visidea-website" type="host">visidea.ai</value>
              <value id="visidea-data" type="host">data:</value>
            </values>
          </policy>
        <policy id="font-src">
            <values>
              <value id="visidea-cdn" type="host">cdn.visidea.ai</value>
            </values>
          </policy>
    </policies>
</csp_whitelist>