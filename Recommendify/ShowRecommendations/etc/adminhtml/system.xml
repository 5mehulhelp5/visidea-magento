<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="recommendify" translate="label" sortOrder="999">
            <label>Recommendify</label>
        </tab>
        <section id="recommendify_showrecommendations" translate="label" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Show Recommendations</label>
            <tab>recommendify</tab>
            <resource>Recommendify_ShowRecommendations::refresh_config</resource>
            <group id="general" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Modulo per l'integrazione di Recommendify</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Abilita Show Recommendations</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="private_token" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label>Token Privato</label>
                   <comment><![CDATA[Aggiungi il tuo token privato]]></comment>
                   <depends>
                       <field id="enable">1</field>
                   </depends>
                   <validate>validate-no-empty</validate>
               </field>
               <field id="public_token" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label>Token Pubblico</label>
                   <comment><![CDATA[Aggiungi il tuo token pubblico]]></comment>
                   <depends>
                       <field id="enable">1</field>
                   </depends>
                   <validate>validate-no-empty</validate>
               </field>
                <field id="cron_url" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>Recommendify\ShowRecommendations\Block\Adminhtml\System\Config\Field\CronUrl</frontend_model>
                </field>
                <field id="items_export_csv" translate="label" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>Recommendify\ShowRecommendations\Block\Adminhtml\System\Config\Field\ItemsExport</frontend_model>
                </field>
                <field id="customer_export_csv" translate="label" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>Recommendify\ShowRecommendations\Block\Adminhtml\System\Config\Field\CustomerExport</frontend_model>
                </field>
                <field id="export_csv" translate="label" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>Recommendify\ShowRecommendations\Block\Adminhtml\System\Config\Field\InteractionExport</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
